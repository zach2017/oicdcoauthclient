{
  "realm": "document-api-realm",
  "enabled": true,
  "displayName": "Document API Realm",
  "registrationAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "failureFactor": 5,
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      },
      {
        "name": "api-access",
        "description": "API access role"
      }
    ],
    "client": {
      "document-api": [
        {
          "name": "summarize",
          "description": "Can summarize documents"
        },
        {
          "name": "query",
          "description": "Can send custom queries"
        },
        {
          "name": "manage-models",
          "description": "Can manage Ollama models"
        }
      ]
    }
  },
  "groups": [
    {
      "name": "users",
      "path": "/users",
      "realmRoles": ["user", "api-access"]
    },
    {
      "name": "admins",
      "path": "/admins",
      "realmRoles": ["admin", "user", "api-access"]
    }
  ],
  "defaultGroups": ["/users"],
  "clients": [
    {
      "clientId": "document-api",
      "name": "Document Summarization API",
      "description": "OAuth2 client for the Document Summarization API",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "change-me-in-production",
      "redirectUris": [
        "http://localhost:8000/*",
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:8000",
        "http://localhost:3000",
        "+"
      ],
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "frontchannelLogout": true,
      "protocol": "openid-connect",
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:3000/*",
        "oauth2.device.authorization.grant.enabled": "false",
        "backchannel.logout.session.required": "true",
        "backchannel.logout.revoke.offline.tokens": "false"
      },
      "authenticationFlowBindingOverrides": {},
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ],
      "protocolMappers": [
        {
          "name": "client-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "resource_access.${client_id}.roles",
            "jsonType.label": "String",
            "usermodel.clientRoleMapping.clientId": "document-api"
          }
        },
        {
          "name": "groups",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-group-membership-mapper",
          "consentRequired": false,
          "config": {
            "full.path": "false",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "groups",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "document-api-public",
      "name": "Document API Public Client",
      "description": "Public OAuth2 client for SPA applications",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5173/*"
      ],
      "webOrigins": ["+"],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "fullScopeAllowed": true,
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "email": "testuser@example.com",
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "testpassword",
          "temporary": false
        }
      ],
      "realmRoles": ["user", "api-access"],
      "clientRoles": {
        "document-api": ["summarize", "query"]
      },
      "groups": ["/users"]
    },
    {
      "username": "adminuser",
      "enabled": true,
      "email": "admin@example.com",
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "adminpassword",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "user", "api-access"],
      "clientRoles": {
        "document-api": ["summarize", "query", "manage-models"]
      },
      "groups": ["/admins"]
    }
  ],
  "scopeMappings": [
    {
      "client": "document-api",
      "roles": ["user", "api-access"]
    }
  ],
  "clientScopeMappings": {
    "document-api": [
      {
        "client": "document-api",
        "roles": ["summarize", "query"]
      }
    ]
  }
}
