# Application Settings
APP_NAME=Document Summarization API
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ===========================================
# Keycloak OAuth2/OIDC Configuration
# ===========================================

# Keycloak server URL (without /auth for Keycloak 17+)
KEYCLOAK_SERVER_URL=http://localhost:8080

# Keycloak realm name
KEYCLOAK_REALM=document-api-realm

# OAuth2 client ID (must be registered in Keycloak)
KEYCLOAK_CLIENT_ID=document-api

# OAuth2 client secret (required for confidential clients)
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Token Validation Settings
# Set to false if you don't want to verify audience
KEYCLOAK_VERIFY_AUDIENCE=true

# Set to false if you don't want to verify issuer
KEYCLOAK_VERIFY_ISSUER=true

# Use token introspection instead of local JWT validation
# (requires client secret, more secure but slower)
KEYCLOAK_USE_INTROSPECTION=false

# ===========================================
# Ollama Configuration
# ===========================================

# Ollama API server URL
OLLAMA_URL=http://localhost:11434

# Default model for text generation
# Popular options: llama3.2, mistral, codellama, phi
OLLAMA_DEFAULT_MODEL=llama3.2

# Timeout for Ollama API requests (seconds)
OLLAMA_TIMEOUT=120.0

# ===========================================
# File Upload Settings
# ===========================================

# Maximum upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# ===========================================
# Logging
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
